import telebot
import constants


bot = telebot.TeleBot(constants.Token)
print(bot.get_me())



a = 42
b = "qwerty"
print(type(a), type(b))

def log(message, answer):
    print("\n ==========================================")
    from datetime import datetime
    print(datetime.now())
    print("Сообщение от {0} {1} {2}, (id = {3}) \n   Текст - {4}," .format(message.from_user.username,
                                                                    message.from_user.first_name,
                                                                    message.from_user.last_name,
                                                                    str(message.from_user.id),
                                                                    message.text))
    print(answer)

@bot.message_handler(commands=['help'])
def handler_text(message):
    answer = """Мои способности весьма специфичны.
    Но ты только посмотри! Все работает!!!"""
    log(message, answer)
    bot.send_message(message.chat.id, answer)

@bot.message_handler(commands=['start'])
def handler_text(message):
    user_markup = telebot.types.ReplyKeyboardMarkup(True, False)
    user_markup.row("Привет", "Как дела", "/start", "/help")
    user_markup.row("/stop")
    bot.send_message(message.from_user.id, "Привет", reply_markup=user_markup)
    answer = """Начинаем говорить, считай меня за своего друга!"""
    log(message, answer)
    bot.send_message(message.chat.id, answer)

@bot.message_handler(commands=['stop'])
def handler_text(message):
    answer = """Заканчиваем разговор"""
    hide_markup = telebot.types.ReplyKeyboardRemove()
    bot.send_message(message.from_user.id, '...', reply_markup=hide_markup)
    log(message, answer)
    bot.send_message(message.chat.id, answer)


@bot.message_handler(content_types=['text'])
def handler_text(message):
    answer = "Лох, я могу отвечать только на слова Привет и Как дела!"
    if message.text == "Привет":
        answer = "Привет!"
        log(message, answer)
        bot.send_message(message.chat.id, answer)
    elif message.text == "Как дела":
        answer = "Отлично!"
        log(message, answer)
        bot.send_message(message.chat.id, answer)
    else:
        bot.send_message(message.chat.id, answer)
        log(message, answer)

bot.polling(none_stop=True, interval=0)
